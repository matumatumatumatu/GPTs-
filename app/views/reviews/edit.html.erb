<!-- app/views/reviews/edit.html.erb -->
<div class="container mt-5">
  <h2>レビューの編集</h2>
  <%= form_for(@review) do |f| %>
    <div class="form-group">
      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title, class: 'form-control', value: @review.title %>
    </div>

    <div class="form-group">
      <%= f.label :content, "内容" %>
      <%= f.text_area :content, class: 'form-control', value: @review.content %>
    </div>

    <%= f.submit "更新する", class: 'btn btn-primary' %>
  <% end %>

  <%= link_to '戻る', reviews_path, class: 'btn btn-secondary' %>
</div>