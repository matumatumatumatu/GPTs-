<!-- app/views/reviews/show.html.erb -->
<div class="container mt-5">
  <h2><%= @review.title %></h2>
  <p><%= @review.content %></p>

  <%= link_to '編集する', edit_review_path(@review), class: 'btn btn-primary' %>
  <%= link_to '削除する', review, method: :delete, data: { confirm: 'このレビューを削除してよろしいですか？' }, class: 'btn btn-danger' %>
  <%= link_to '一覧に戻る', reviews_path, class: 'btn btn-secondary' %>
</div>