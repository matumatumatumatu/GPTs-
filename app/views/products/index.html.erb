<%= render 'layouts/member_header' %>
<div class="container mt-5">
  <h2>製品一覧</h2>
  <% if @products.present? %>
    <% @products.each do |product| %>
      <div class="mb-3">
        <h3><%= link_to product.name, product %></h3>
        <p><%= truncate(product.description, length: 100) %></p>
      </div>
    <% end %>
  <% else %>
    <p>製品がありません。</p>
  <% end %>

  <%= link_to '新しい製品を登録', new_product_path, class: 'btn btn-primary' %>
</div>